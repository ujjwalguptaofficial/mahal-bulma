{
    "compilerOptions": {
        "baseUrl": "",
        "declaration": true,
        "declarationDir": "./dist/ts",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es6",
            "dom"
        ],
        "mapRoot": "./",
        "module": "es6",
        "sourceMap": true,
        "target": "es6",
        "moduleResolution": "node",
        "paths": {
            "~/*": [
                "./*"
            ],
            "@/*": [
                "src/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@config/*": [
                "./config/*"
            ]
        }
    },
    "exclude": [
        "tests/*"
    ]
}